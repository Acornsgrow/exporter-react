{
  "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
  },
  "include": [
      "src/js/**/*"
  ],
  "exclude": [
      "node_modules/**/*"
  ]
}